<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.polymap.rhei.ide.editor.ConsoleView"
            icon="icons/eview16/console_view.gif"
            id="org.polymap.rhei.ide.ConsoleView"
            name="Console"
            restorable="false">
      </view>
      <view
            class="org.polymap.rhei.ide.project.ProjectNavigator"
            icon="icons/eview16/script_editor.gif"
            id="org.polymap.rhei.ProjectNavigator"
            name="Projects"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.polymap.rhei.ide.editor.ScriptEditor"
            default="false"
            extensions="java, js, html"
            icon="icons/eview16/script_editor.gif"
            id="org.polymap.rhei.ide.ScriptEditor"
            name="Script">
      </editor>
   </extension>
   <extension
         point="org.polymap.rhei.form.pageProviders">
      <pageProvider
            class="org.polymap.rhei.ide.form.ScriptFormPageProvider"
            id="org.polymap.rhei.ide.ScriptFormPageProvider"
            name="ScriptFormPageProvider">
      </pageProvider>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.polymap.rhei.ide.IdePerspectiveFactory"
            icon="icons/eview16/script_editor.gif"
            id="org.polymap.rhei.ScriptingPerspective"
            name="Rhei Scripting">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.rap.ui.navigator.viewer">
      <viewer
            viewerId="org.polymap.rhei.ProjectNavigator">
      </viewer>
      <viewerContentBinding
            viewerId="org.polymap.rhei.ProjectNavigator">
         <includes>
            <contentExtension
                  pattern="org.polymap.rhei.workbench.*">
            </contentExtension></includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.rap.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.polymap.rhei.ide.project.ScriptProjectContentProvider"
            id="org.polymap.rhei.workbench.scriptsContent"
            labelProvider="org.polymap.rhei.ide.project.ScriptProjectLabelProvider"
            name="Scripts"
            priority="highest">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </or>
         </triggerPoints>
      </navigatorContent>
   </extension>

</plugin>
